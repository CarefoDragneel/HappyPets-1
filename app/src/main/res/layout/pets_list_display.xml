<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="5dp"
        android:elevation="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/petImage"
            android:layout_weight="4"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_margin="15dp"
            android:src="@drawable/profile_image" />


        <LinearLayout
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/pet_list_item_layout"
                android:gravity="center"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:padding="6dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/PetType"
                    tools:text="Pet Type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_300"
                    android:textAlignment="center"
                    android:layout_margin="2dp"
                    android:textAllCaps="true"/>

                <TextView
                    android:id="@+id/DisplayPetName"
                    tools:text="Pet Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black_300"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/DisplayPetBreed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Text"
                    android:layout_margin="2dp"
                    android:textColor="@color/black_300"
                    android:textAlignment="center"
                    android:textAllCaps="false"/>



                <TextView
                    android:id="@+id/DisplayPetGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Text"
                    android:layout_margin="2dp"
                    android:textColor="@color/black_300"
                    android:textAlignment="center"
                    android:textAllCaps="true"/>





            </LinearLayout>

            <RelativeLayout
                android:background="@color/brown_200"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/delete_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/pets_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </RelativeLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>